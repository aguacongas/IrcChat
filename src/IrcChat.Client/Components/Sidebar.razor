@using IrcChat.Shared.Models

<div class="sidebar @(IsOpen ? "open" : "closed")">
    <div class="user-info" @onclick="OnUserInfoClicked">
        @if (!string.IsNullOrEmpty(AvatarUrl))
        {
            <img src="@AvatarUrl" alt="Avatar" class="avatar" />
        }
        else
        {
            <span class="avatar-placeholder">üë§</span>
        }
        <div class="user-details">
            <span class="current-user">@Username</span>
            @if (IsOAuthUser)
            {
                <div class="badges">
                    <span class="badge verified">‚úì R√©serv√©</span>
                    @if (IsAdmin)
                    {
                        <span class="badge admin">‚ö° Admin</span>
                    }
                </div>
            }
            else
            {
                <span class="badge guest">Invit√©</span>
            }
        </div>
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="settings-icon">
            <path d="M12 15a3 3 0 100-6 3 3 0 000 6z" />
            <path d="M19.4 15a1.65 1.65 0 00.33 1.82l.06.06a2 2 0 010 2.83 2 2 0 01-2.83 0l-.06-.06a1.65 1.65 0 00-1.82-.33 1.65 1.65 0 00-1 1.51V21a2 2 0 01-2 2 2 2 0 01-2-2v-.09A1.65 1.65 0 009 19.4a1.65 1.65 0 00-1.82.33l-.06.06a2 2 0 01-2.83 0 2 2 0 010-2.83l.06-.06a1.65 1.65 0 00.33-1.82 1.65 1.65 0 00-1.51-1H3a2 2 0 01-2-2 2 2 0 012-2h.09A1.65 1.65 0 004.6 9a1.65 1.65 0 00-.33-1.82l-.06-.06a2 2 0 010-2.83 2 2 0 012.83 0l.06.06a1.65 1.65 0 001.82.33H9a1.65 1.65 0 001-1.51V3a2 2 0 012-2 2 2 0 012 2v.09a1.65 1.65 0 001 1.51 1.65 1.65 0 001.82-.33l.06-.06a2 2 0 012.83 0 2 2 0 010 2.83l-.06.06a1.65 1.65 0 00-.33 1.82V9a1.65 1.65 0 001.51 1H21a2 2 0 012 2 2 2 0 01-2 2h-.09a1.65 1.65 0 00-1.51 1z" />
        </svg>
    </div>

    <div class="channels-section">
        <div class="section-header">
            <h3>Mes Salons</h3>
            <button class="btn-browse-channels"
                    @onclick="OnBrowseChannelsClicked"
                    title="Parcourir tous les salons">
                <span class="browse-icon">üîç</span>
                Parcourir
            </button>
        </div>

        @if (Channels.Any())
        {
            <ul class="channel-list">
                @foreach (var channelName in Channels.Select(c => c.Name))
                {
                    <li class="@(channelName == CurrentChannel ? "active" : "")">
                        <div class="channel-content" @onclick="() => OnChannelSelected.InvokeAsync(channelName)">
                            <span class="channel-hash">#</span>
                            <span class="channel-name">@channelName</span>
                        </div>
                        <button class="btn-leave-channel"
                                @onclick="() => OnChannelLeave.InvokeAsync(channelName)"
                                title="Quitter ce salon">
                            √ó
                        </button>
                    </li>
                }
            </ul>
        }
        else
        {
            <div class="empty-channels">
                <p class="empty-text">Aucun salon rejoint</p>
            </div>
        }
    </div>

    <PrivateConversations Conversations="PrivateConversations"
                          SelectedUser="SelectedPrivateUser"
                          OnConversationSelected="OnPrivateConversationSelected"
                          OnConversationDeleted="OnConversationDeleted" />
</div>

@code {
    [Parameter]
    public string Username { get; set; } = string.Empty;

    [Parameter]
    public string? AvatarUrl { get; set; }

    [Parameter]
    public bool IsOAuthUser { get; set; }

    [Parameter]
    public bool IsAdmin { get; set; }

    [Parameter]
    public string CurrentChannel { get; set; } = string.Empty;

    [Parameter]
    public List<Channel> Channels { get; set; } = new();

    [Parameter]
    public List<User> Users { get; set; } = new();

    [Parameter]
    public List<PrivateConversation> PrivateConversations { get; set; } = new();

    [Parameter]
    public User? SelectedPrivateUser { get; set; }

    [Parameter]
    public EventCallback<string> OnChannelSelected { get; set; }

    [Parameter]
    public EventCallback<User> OnUserClicked { get; set; }

    [Parameter]
    public EventCallback<User> OnPrivateConversationSelected { get; set; }

    [Parameter]
    public EventCallback<User> OnConversationDeleted { get; set; }

    [Parameter]
    public EventCallback OnUserInfoClicked { get; set; }

    [Parameter]
    public EventCallback<string> OnChannelDeleted { get; set; }

    [Parameter]
    public EventCallback OnBrowseChannelsClicked { get; set; }

    [Parameter]
    public EventCallback<string> OnChannelLeave { get; set; }

    [Parameter]
    public bool IsOpen { get; set; }
}
