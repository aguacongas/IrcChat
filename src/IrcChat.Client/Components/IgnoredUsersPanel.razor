@page "/ignored-users"

<h3>Ignored Users</h3>

<div class="ignored-users-panel">
    <h4>Ignored Users (<span>@ignoredUsers.Count</span>)</h4>
    <button @onclick="ToggleExpand">{{ isExpanded ? "Hide" : "Show" }} List</button>
    @if (isExpanded)
    {
        <ul>
            @foreach (var user in ignoredUsers)
            {
                <li>
                    @user <button @onclick="() => RemoveUser(user)">Remove</button>
                </li>
            }
        </ul>
    }
</div>

@code {
    private List<string> ignoredUsers = new List<string>();
    private bool isExpanded = false;

    private void ToggleExpand()
    {
        isExpanded = !isExpanded;
    }

    private void RemoveUser(string user)
    {
        ignoredUsers.Remove(user);
    }
}